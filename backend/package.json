{
  "name": "tescha-backend",
  "version": "1.0.0",
  "description": "Sistema de Coordinación de Inglés - TESCHA Backend",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "init-db": "node scripts/initDatabase.js",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop tescha-backend",
    "pm2:restart": "pm2 restart tescha-backend",
    "pm2:logs": "pm2 logs tescha-backend",
    "pm2:monit": "pm2 monit",
    "logs:clean": "node -e \"require('fs').readdirSync('logs').filter(f => f.endsWith('.log') && new Date() - new Date(require('fs').statSync('logs/'+f).mtime) > 30*24*60*60*1000).forEach(f => require('fs').unlinkSync('logs/'+f))\""
  },
  "keywords": [
    "tescha",
    "inglés",
    "coordinación"
  ],
  "author": "TESCHA",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "chartjs-node-canvas": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^7.2.0",
    "joi": "^18.0.2",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.11",
    "papaparse": "^5.5.3",
    "pdfkit": "^0.13.0",
    "pg": "^8.11.3",
    "react-dropzone": "^14.3.8",
    "tesseract.js": "^6.0.1",
    "twilio": "^5.10.6",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "axios": "^1.13.2",
    "nodemon": "^3.0.2"
  }
}
