# ===================================
# CONFIGURACIÓN PARA RENDER.COM
# ===================================

# Entorno
NODE_ENV=production

# Puerto (Render lo asigna automáticamente)
PORT=5000

# ===================================
# BASE DE DATOS (PostgreSQL en Render)
# ===================================
# Opción 1: Usar DATABASE_URL (Render lo proporciona automáticamente)
DATABASE_URL=postgresql://usuario:password@host:5432/tescha

# Opción 2: O usar variables individuales
DB_HOST=tu-db-host.render.com
DB_PORT=5432
DB_NAME=tescha
DB_USER=tescha_user
DB_PASSWORD=tu-password-aqui

# ===================================
# SEGURIDAD
# ===================================
# JWT Secret (CAMBIAR por uno seguro)
# Genera uno con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=cambiar-por-un-secret-super-seguro-de-64-caracteres-minimo

# ===================================
# CORS - URL del Frontend
# ===================================
# Después de crear el frontend en Render, actualiza esta URL
FRONTEND_URL=https://tescha-frontend.onrender.com

# ===================================
# EMAIL (Opcional - para notificaciones)
# ===================================
EMAIL_USER=tu-email@gmail.com
EMAIL_PASSWORD=tu-app-password-de-gmail
EMAIL_FROM=TESCHA <noreply@tescha.edu.mx>

# ===================================
# TWILIO (Opcional - para WhatsApp)
# ===================================
TWILIO_ACCOUNT_SID=tu-account-sid
TWILIO_AUTH_TOKEN=tu-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===================================
# CONFIGURACIÓN DE LOGS
# ===================================
LOG_LEVEL=info
